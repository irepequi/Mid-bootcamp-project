<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ACOMER</title>

    <!-- FAVICON -->
    <link rel="icon" type="image/png" href="/images/web/logo.png" />

    <!-- CSS -->
    <link rel="stylesheet" href="/stylesheets/style.css" />

    <!-- BOOTSTRAP -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <!-- GOOGLE ICON  -->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- NAVBAR -->
        <div class="col-12"><%- include('navbarChef') %></div>
      </div>
      <!-- chefs -->
      <div class="row allChef">
        <% result.forEach(chef => { %>
        <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 p-5">
          <a href="/chef/profile/<%= chef.chef_id %>" class="imgChef">
            <div class="oneChef">
              <img
                class="card-img w-100"
                src="/images/chefs/<%= chef.img %>"
                alt=""
              />
              <div class="card-info">
                <h3><%= chef.chef_name %></h3>
              </div>
              <div class="gradient-overlay"></div>
              <div class="color-overlay"></div>
            </div>
          </a>
        </div>
        <% }) %>
      </div>
    </div>
    <!-- FOOTER -->
    <div class="container"><%- include('footer') %></div>

    <!-- SCRIPT BOOTSTRAP -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
