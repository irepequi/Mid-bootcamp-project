<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ACOMER</title>

    <!-- FAVICON -->
    <link rel="icon" type="image/png" href="/images/web/logo.png" />
    
    <!-- CSS -->
    <link rel="stylesheet" href="/stylesheets/style.css" />
    
    <!-- BOOTSTRAP -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
   
    <!-- GOOGLE ICON  -->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- NAVBAR -->
        <div class="col-12"><%- include('navbarChef') %></div>
      </div>
      <!-- chef -->
      <div class="row">
        <div class="col-12">
          <div class="card" style="width: 18rem">
          <img
            src="/images/chefs/<%= resultChef[0].img %>"
            class="card-img-top"
            alt="..."
          />
          <div class="card-body">
            <h5 class="card-title"><%= resultChef[0].chef_name %> <%= resultChef[0].last_name %></h5>
            <p class="card-text"><%= resultChef[0].chef_description %></p>
            <p class="card-text"><%= resultChef[0].email %></p>
            <p class="card-text"><%= resultChef[0].phone %></p>
            
            <!-- botones -->
            <a
              href="/dish/form/<%= resultChef[0].chef_id %>"
              class="btn btn-primary" alt="AÃ±adir plato">
              <span class="material-icons">add</span>
              <span class="material-icons">restaurant</span>
            </a>
              
            <a
              href="/chef/showEditForm/<%= resultChef[0].chef_id %>"
              class="btn btn-warning"
              >
              <span class="material-icons">edit</span>
            </a>
            
            <a
              href="/chef/logicDelete/<%= resultChef[0].chef_id %>"
              class="btn btn-danger"
              >
              <span class="material-icons">person_remove</span>
            </a>
          </div>
        </div>
        </div>
        
      </div>

    <div class="d-flex m-5">
      <% resultDish.forEach(dish => { %>
      <div class="card" style="width: 18rem">
        <img
          src="/images/dishes/<%= dish.dish_img %>"
          class="card-img-top"
          alt="..."
        />
        <div class="card-body">
          <h5 class="card-title"><%= dish.dish_name %></h5>
          <p class="card-text"><%= dish.dish_description %></p>
          
          <!-- botones -->
          <a href="/dish/editDish/<%= dish.dish_id %>" class="btn btn-warning"
            >
            <span class="material-icons">edit</span>
          </a>
          <a
            href="/dish/logicDeleteDish/<%= dish.dish_id %>/<%= dish.chef_id %>"
            class="btn btn-danger"
            >
            <span class="material-icons">restaurant</span>
            <span class="material-icons">remove</span>
          </a>
        </div>
      </div>
      <% }) %>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
