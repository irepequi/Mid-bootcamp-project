<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('navbar') %>

    <div class="card" style="width: 18rem">
      <img
        src="/images/customers/<%= resultCustomer[0].img %>"
        class="card-img-top"
        alt="..."
      />
      <div class="card-body">
        <h5 class="card-title"><%= resultCustomer[0].name %></h5>
        <p class="card-text"><%= resultCustomer[0].phone %></p>
        <p class="card-text"><%= resultCustomer[0].address %></p>
        <p class="card-text"><%= resultCustomer[0].email %></p>
        <a
          href="/pet/showForm/<%= resultCustomer[0].customer_id %>"
          class="btn btn-primary"
          >Añadir mascota</a
        >
        <br />
        <br />
        <a
          href="/customer/showEditForm/<%= resultCustomer[0].customer_id %>"
          class="btn btn-warning"
          >Editar usuario</a
        >
        <br />
        <br />
        <a
          href="/customer/logicDelete/<%= resultCustomer[0].customer_id %>"
          class="btn btn-danger"
          >Eliminar usuario</a
        >
      </div>
    </div>

    <div class="d-flex m-5">
      <% resultPet.forEach(pet => { %>
      <div class="card" style="width: 18rem">
        <img
          src="/images/pets/<%= pet.pet_img %>"
          class="card-img-top"
          alt="..."
        />
        <div class="card-body">
          <h5 class="card-title"><%= pet.pet_name %></h5>
          <p class="card-text"><%= pet.category %></p>
          <a href="/pet/editPet/<%= pet.pet_id %>" class="btn btn-warning"
            >Editar mascota</a
          >
          <br />
          <br />
          <a
            href="/pet/deletePet/<%= pet.pet_id %>/<%= pet.customer_id %>"
            class="btn btn-danger"
            >Eliminar mascota</a
          >
          <br />
          <br />
          <a
            href="/pet/logicDeletePet/<%= pet.pet_id %>/<%= pet.customer_id %>"
            class="btn btn-success"
            >Borrado lógico</a
          >
        </div>
      </div>
      <% }) %>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
