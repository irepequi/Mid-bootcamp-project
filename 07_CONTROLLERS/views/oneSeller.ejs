<!DOCTYPE html>
<html>
  <head>
    <title>oneSeller</title>
    <!-- CSS -->
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <!-- BOOTSTRAP -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- GOOGLE ICON  -->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container-fluid">
      <!-- HEADER -->
      <header class="row">
        <div class="col-12">
          <!-- NAVBAR -->
          <%- include('navbar') %>
        </div>
      </header>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="card" style="width: 18rem">
            <img
              src="/images/<%= result[0].img %>"
              class="card-img-top"
              alt="..."
            />
            <div class="card-body">
              <h5 class="card-title"><%= result[0].name %></h5>
              <p class="card-text">Phone: <%= result[0].phone %></p>
              <p class="card-text">Email: <%= result[0].email %></p>
              <a
                href="/product/productForm/<%= result[0].seller_id %>"
                class="btn btn-primary mb-3"
                >Añadir producto</a
              >
              <a
                href="/seller/sellerEditForm/<%= result[0].seller_id %>"
                class="btn btn-warning mb-3"
                >Editar vendedor</a
              >
              <a
                href="/seller/deleteSeller/<%= result[0].seller_id %>"
                class="btn btn-danger mb-3"
                >Eliminar vendedor</a
              >
            </div>
          </div>
          <hr />
          <hr />
          <hr />
          <% result2.forEach(product => { %>

          <div class="card" style="width: 18rem">
            <img
              src="/images/<%= product.product_img %>"
              class="card-img-top"
              alt="..."
            />
            <div class="card-body">
              <h5 class="card-title"><%= product.product_name %></h5>
              <p class="card-text"><%= product.description %></p>
              <p class="card-text"><%= product.price %> €</p>
              <p>
                <a
                  href="/product/productEditForm/<%= product.product_id %>"
                  class="btn btn-warning mb-3"
                  >Editar producto</a
                >
                <a
                  href="/product/deleteProduct/<%= product.product_id %>/<%= product.seller_id %>"
                  class="btn btn-danger mb-3"
                  >Eliminar Producto</a
                >
              </p>
            </div>
          </div>
          <br />
          <% }) %>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
